{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/signin", "dest": "/signin.html" },
    { "src": "/signup", "dest": "/signup.html" },
    { "src": "/(.*)", "dest": "/index.html" },
    { "src": "/manageEvents", "dest": "/manageEvents.html" }
  ],
  "rewrites": [
       { "source": "/manageEvents/:id", "destination": "/manageEvents.html" }
     ]
}